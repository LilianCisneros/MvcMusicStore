@model IEnumerable<MvcMusicStore.Models.Album>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear nueva", "Create")
</p>
<table>
    <tr>
        <th>
            Genero
        </th>
        <th>
            Nombre Artista
        </th>
        <th>
            Titulo
        </th>
        <th>
            Precio
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AlbumId })|@Html.ActionLink("Detalles", "Details", new { id=item.AlbumId })|@Html.ActionLink("Eliminar", "Delete", new { id=item.AlbumId })
        </td>
    </tr>
}

</table>
